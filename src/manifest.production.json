{
    "manifest_version": 3,
    "name": "Tracker Detector",
    "description": "Detects web trackers and modifies User-Agent.",
    "version": "0.0.1",
    "icons":{
        "128":"./logo.png",
        "64":"./logo.png",
        "32":"./logo.png",
        "16":"./logo.png"
    },
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [{
        "resources": ["randomize-user-data.js", "PrivacyGuard-detect-fp-calls.js"],
        "matches": ["<all_urls>"]
    }],
    "permissions": [
        "declarativeNetRequest", 
        "declarativeNetRequestWithHostAccess", 
        "declarativeNetRequestFeedback",
        "storage",
        "tabs",
        "scripting",
        "webRequest",
        "activeTab"
    ],
    "host_permissions": ["*://*/*"]
}